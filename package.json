{
  "name": "business-card-website",
  "version": "1.0.0",
  "description": "Mikhailo Distribution website",
  "scripts": {
    "build:css": "postcss styles.css -o dist/styles.css --minify",
    "build:css:dev": "postcss styles.css -o dist/styles.css --map",
    "watch:css": "postcss styles.css -o dist/styles.css --watch --map",
    "dev": "npm run watch:css",
    "clean": "rm -rf dist/styles.css dist/styles.css.map"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "@tailwindcss/postcss": "^4.1.17",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1"
  }
}
